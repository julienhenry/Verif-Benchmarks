$(RESDIR)%.domain.ppl_poly_bagnara.ppl_poly.res:  $(BCDIR)%.bc | $(RESDIR)
	@echo "$@ started..."
	$(PAGAI) -i $< -a " -o $@ -C -t $(TECHNIQUE) --domain ppl_poly_bagnara --domain2 ppl_poly --timeout 600 --quiet --force-old-output "
	@echo "$@ finished..."

cmp_domains.png: $(RESFILES_DOMAINS)
	@process_results_domains.py .. $(PWD) cmp_domains $(RESFILES_DOMAINS)
	@touch $@

$(TABLE_DOMAINS): $(RESFILES_DOMAINS) cmp_domains.png 
	@build_table_domains.py $(TECHNIQUE_NAME) results.json > $@
